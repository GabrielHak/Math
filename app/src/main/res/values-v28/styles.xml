    <style name="button"  parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_bg_m</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="sw" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:background">@drawable/btn_bg_m</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:textOff"> </item>
        <item name="android:textOn"> </item>
        <item name="android:thumb">@drawable/star_25_25</item>
        <item name="android:track">@drawable/btn_sw_track_selector</item>
    </style>

    <style name="editTextM" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@drawable/btn_bg_m</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
